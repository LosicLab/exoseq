/*
MSSM Minerva config file for nfcore/ExoSeq pipeline
Contains paths (Losic-Group Specific) for meta files, genomes and
configurations for executors i.e. LSF
*/



params.minerva_account='ACC'
params.job_queue='alloc'


process {
    executor = 'lsf'
    cpus = {2 * task.attempt}
    memory = { 8.GB * task.attempt }
    time = { 2.h * task.attempt }
 
    queue = params.job_queue
    clusterOptions = { "-P $params.minerva_account" }

    errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
    maxRetries = 5
    maxErrors = '-1'
    module = ['picard/2.7.1', 'trim_galore/0.4.5', 'R', 'fastqc', 'samtools', 'bwa/0.7.15', 'gatk/4.0.1.2']

    // step-specific resource allocations

    $fastqc {
        cpus = { 2 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 3.h * task.attempt }
    }

    $trim_galore {
        cpus = { 2 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 3.h * task.attempt }
    }

    $bwamem {
        cpus = { 32 * task.attempt }
        memory = { 64.GB * task.attempt }
        time = { 6.h * task.attempt }
    }

    $markDuplicates {
        cpus = { 16 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 5.h * task.attempt }
    }

    $recalibrateBam {
        cpus = { 16 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 5.h * task.attempt }
    }

    $applyBQSR {
        cpus = { 16 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 15.h * task.attempt }
    }
    
    $collectMultiMetrics {
        cpus = { 16 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 5.h * task.attempt }
    }

    $variantCall {
        cpus = { 16 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 5.h * task.attempt }
    }

}

env {
PICARD= '$PICARD'
}


executor {
    name = 'lsf'
    queueSize = 30
    pollInterval = '30 sec'
    jobName = { "$task.name" }

}