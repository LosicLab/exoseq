/*
MSSM Minerva config file for nfcore/ExoSeq pipeline
Contains paths (Losic-Group Specific) for meta files, genomes and
configurations for executors i.e. LSF
*/

process {
    executor = 'lsf'
    cpus = {2 * task.attempt}
    memory = { 16.GB * task.attempt }
    time = { 2.h * task.attempt }
    clusterOptions = { "-A $params.project ${params.clusterOptions ?: ''}" }
    errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
    maxRetries = 3
    maxErrors = '-1'
    $bwaAlign {
        module = ['bwa/0.7.15']
        cpus = { 8 * task.attempt }
        memory = { 64.GB * task.attempt }
        time = { 10.h * task.attempt }
    }
    $fastqToSam {
        module = ['picard/2.0.1']
        cpus = { 4 * task.attempt }
    }
    $mergeLaneBam {
        module = ['picard/2.0.1']
        cpus = { 8 * task.attempt }
        memory = { 40.GB * task.attempt }
        time = { 10.h * task.attempt }
    }
    $sortLanesBam {
        module = ['picard/2.0.1']
    }
    $mergeSampleBam {
        module = ['picard/2.0.1']
        cpus = { 8 * task.attempt }
        memory = { 40.GB * task.attempt }
        time = { 10.h * task.attempt }
    }
    $markDuplicate {
        module = ['picard/2.0.1']
        cpus = { 8 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 5.h * task.attempt }
    }
    $recalibrate {
        module = ['gatk/3.6-0']
        cpus = { 8 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 5.h * task.attempt }
    }
    $realign {
        module = ['gatk/3.6-0']
        cpus = { 8 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 5.h * task.attempt }
    }
    $calculateMetrics {
        module = ['picard/2.0.1']
    }
    $variantCall {
        module = ['gatk/3.6-0']
        cpus = { 8 * task.attempt }
        memory = { 32.GB * task.attempt }
        time = { 8.h * task.attempt }
    }
    $variantSelect {
        module = ['gatk/3.6-0']
        cpus = { 4 * task.attempt }
        time = { 3.h * task.attempt }
    }
    $filterSnp {
        module = ['gatk/3.6-0']
    }
    $filterIndel {
        module = ['gatk/3.6-0']
    }
    $combineVariants {
        module = ['gatk/3.6-0']
        cpus = { 4 * task.attempt }
    }
    $haplotypePhasing {
        module = ['gatk/3.6-0']
        cpus = { 4 * task.attempt }
        time = { 3.h * task.attempt }
    }
    $variantEvaluate {
        module = ['gatk/3.6-0']
        cpus = { 4 * task.attempt }
    }
    $variantAnnotate {
        module = ['snpeff/4.1']
        cpus = { 4 * task.attempt }
        time = { 3.h * task.attempt }
    }
}

params {
    metaFiles {
        'GRCh38' {
            gfasta = '/sc/orga/projects/losicb01a/common_folder/reference/NCBI_GRCh38/WholeGenomeFasta/genome.fa'
            bwa_index = '/sc/orga/projects/losicb01a/common_folder/reference/NCBI_GRCh38/BWAIndex/genome.fa.bwt'
            dbsnp = '/sc/orga/projects/losicb01a/common_folder/reference/NCBI_GRCh38/'
            hapmap = '/sc/orga/projects/losicb01a/common_folder/reference/NCBI_GRCh38/'
            omni = '/sc/orga/projects/losicb01a/common_folder/reference/NCBI_GRCh38/'
        }
    }
    kitFiles {
        'agilent_v5' {
            bait = '/sc/orga/projects/losicb01a/reference_seq/'
            target = '/sc/orga/projects/losicb01a/reference_seq/'
            target_bed = '/sc/orga/projects/losicb01a/reference_seq/'
        }
    }
}
