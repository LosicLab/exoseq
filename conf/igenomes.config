/*
 * -------------------------------------------------
 *  Nextflow config file for iGenomes paths
 * -------------------------------------------------
 * Defines reference genomes, using iGenome paths
 * Can be used by any config that customises the base
 * path using $params.igenomes_base / --igenomes_base
 * uses aws hosted illumina igenomes: https://ewels.github.io/AWS-iGenomes/
 */

params {

  genomes {
          'GRCh37' {
              gfasta = '${params.igenomes_base}/b37/human_g1k_v37.fasta'
              bwa_index = '${params.igenomes_base}/b37/human_g1k_v37.fasta.bwt'
              dbsnp = '${params.igenomes_base}/b37/dbsnp_138.b37.vcf'
              mills = '${params.igenomes_base}/b37/Mills_and_1000G_gold_standard.indels.b37.vcf'
              omni = '${params.igenomes_base}/b37/1000G_omni2.5.b37.vcf'
              thousandg = '${params.igenomes_base}/b37/1000G_phase1.snps.high_confidence.b37.vcf'
              kits {
              'agilent_v5' {
                  bait = '${params.kitfiles}/agilent_v5/S04380110_Regions.interval_list'
                      target = '${params.kitfiles}/agilent_v5/S04380110_Covered.interval_list'
                      target_bed = '${params.kitfiles}/agilent_v5/S04380110_Covered.bed'
              }
            }
          }

          'GRCh38' {
            bed12   = '${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Annotation/Genes/genes.bed'
            bismark = '${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Sequence/BismarkIndex'
            bowtie  = '${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Sequence/BowtieIndex/genome'
            bowtie2 = '${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Sequence/Bowtie2Index/genome'
            bwa_index     = '${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Sequence/BWAIndex/genome.fa'
            gfasta   = '${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Sequence/WholeGenomeFasta'
            gtf     = '${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Annotation/Genes/genes.gtf'
            star    = '${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Sequence/STARIndex/'
            kits {
                'agilent_v5' {
                    bait = '${params.kitfiles}/agilent_v5/S04380110_Regions.interval_list'
                        target = '${params.kitfiles}/agilent_v5/S04380110_Covered.interval_list'
                        target_bed = '${params.kitfiles}/agilent_v5/S04380110_Covered.bed'
                }
              }
            }
  }

}